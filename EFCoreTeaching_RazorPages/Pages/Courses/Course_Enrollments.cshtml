@page
@model EFCoreTeaching_RazorPages.Pages.Courses.Course_EnrollmentsModel
@{
    ViewData["Title"] = "Course_Enrollments";
}

<h3 style="color:red"> Course_Enrollments</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.Course.CourseName) </dt>
        <dd class="col-sm-10">  @Html.DisplayFor(model => model.Course.CourseName) </dd>
        <dt class="col-sm-2">  @Html.DisplayNameFor(model => model.Course.Enrollments) </dt>
        <dd class="col-sm-10"><table class="table">
                <tr>
                    <th>Student Name</th>
                    <th>Grade</th>
                </tr>
                @foreach (var item in Model.Course.Enrollments)
                {
                    <tr>
                        <td> @Html.DisplayFor(modelItem => item.Student.Name)</td>
                        <td>  @Html.DisplayFor(modelItem => item.Grade) </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>