@page
@model EFCoreTeaching_RazorPages.Pages.Courses.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="  ModelOnly  " class="text-danger">
            </div>
            <div class="form-group">
                <label asp-for="@Model.Course.CourseName" class="control-label"></label>
                <input asp-for="@Model.Course.CourseName" class="form-control" />
                <span asp-validation-for="@Model.Course.CourseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Course.Credits" class="control-label"></label>
                <input asp-for="@Model.Course.Credits" class="form-control" />
                <span asp-validation-for="@Model.Course.Credits" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
